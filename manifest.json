{
  "manifest_version": 2,
  "name": "Handy Dictionary",
  "version": "1.0",
  "description": "Contextual dictionary for Firefox that uses https://dictionaryapi.dev/",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./dist/dictionary.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/index.html",
    "browser_style": true,
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ]
}